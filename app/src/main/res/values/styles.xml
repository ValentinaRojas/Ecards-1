<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/fondo</item>
        <item name="colorPrimaryDark">@color/fondo</item>
        <item name="colorAccent">@color/blanco</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <!-- Sin action bar. -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- Estilo del boton. -->
    <style name="PrimaryButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/fondo</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:textColor">@color/blanco</item>
    </style>

    <!--Etiqueta flotante-->
    <style name="FloatingLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/casi_negro</item>
    </style>

    <!-- Campo de texto. -->
    <style name="EditText" parent="AppTheme">
        <!-- cursor y línea normal-->
        <item name="colorControlNormal">@color/fondo</item>
        <!-- cursor y línea con foco-->
        <item name="colorControlActivated">@color/casi_negro</item>
        <item name="android:drawableTint">@color/casi_negro</item>
        <item name="android:drawableTintMode">@color/fondo</item>
    </style>

    <style name="Error" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">#FE2E2E</item>
    </style>

    <!-- Progress Bar Circle. -->
    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/indigo</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CampoTextoRojo" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#706E6e</item>
        <item name="colorControlActivated">#ff00</item>
        <item name="android:textColorHighlight">#ff00</item>
    </style>

</resources>
