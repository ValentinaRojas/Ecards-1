<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_marginBottom="1dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageV"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            app:civ_border_color="@color/blanco"
            app:civ_border_width="1dp"
            android:src="@drawable/imagen_perfil" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:paddingBottom="10dp"
                android:paddingTop="5dp"
                android:text="Nombre"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/horas2"
                android:layout_width="130dp"
                android:layout_height="25dp"
                android:layout_marginTop="3dp"
                android:layout_alignLeft="@+id/nombre"
                android:layout_alignStart="@+id/nombre"
                android:layout_below="@+id/nombre"
                android:layout_weight="1"
                android:text="Horas Laborales:" />

            <TextView
                android:id="@+id/horas1"
                android:layout_width="130dp"
                android:layout_height="25dp"
                android:layout_alignLeft="@+id/horas2"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/horas2"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:text="Horas Trabajadas:" />

            <TextView
                android:id="@+id/hlab"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_alignBaseline="@+id/horas2"
                android:layout_alignBottom="@+id/horas2"
                android:layout_toEndOf="@+id/horas2"
                android:layout_toRightOf="@+id/horas2"
                android:text="15 horas" />

            <TextView
                android:id="@+id/htra"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_alignBaseline="@+id/horas1"
                android:layout_alignBottom="@+id/horas1"
                android:layout_alignLeft="@+id/hlab"
                android:layout_alignStart="@+id/hlab"
                android:text="30 horas" />

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

