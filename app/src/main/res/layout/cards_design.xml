<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">

<FrameLayout
    android:layout_width="105dp"
    android:layout_height="match_parent"
    android:background="@color/indigo">

</FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:clipChildren="false">

        <ImageView
            android:id="@+id/imagen"
            android:layout_margin="2dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/version"
            android:contentDescription="@string/tarjeta"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/tiempo_r"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:text="@string/vr"
            android:textColor="@color/blanco"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/version"
            android:layout_toRightOf="@+id/version"
            android:text=""
            android:textColor="@color/blanco"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tipo"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/tipo"
            android:layout_marginTop="11dp"
            android:text="@string/titulo"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titulo"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/imagen"
            android:layout_toRightOf="@+id/imagen"
            android:text="@string/tipo" />

        <TextView
            android:id="@+id/fecha_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tiempo_r"
            android:layout_alignLeft="@+id/tipo"
            android:layout_alignStart="@+id/tipo"
            android:layout_marginTop="11dp"
            android:text="@string/tiempo_de_entrega" />

        <TextView
            android:id="@+id/tiempo_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/fecha_e"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/fecha_e"
            android:layout_marginTop="11dp"
            android:text="@string/tiempo_restante" />


    </RelativeLayout>


</android.support.v7.widget.CardView>