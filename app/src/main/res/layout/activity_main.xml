<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="144sp"
            android:layout_height="144sp"
            android:background="@drawable/logo"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/btn_singin"
            android:layout_alignEnd="@+id/btn_singin"
            android:layout_marginTop="51dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/campo_correo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/campo_contrasena"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:hint="Correo electronico"
            app:errorTextAppearance="@style/Error"
            app:hintTextAppearance="@style/FloatingLabel">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/correo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="13"
                android:inputType="textEmailAddress"
                android:theme="@style/EditText" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/campo_contrasena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_singin"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:hint="Contraseña"
            app:errorTextAppearance="@style/Error"
            app:hintTextAppearance="@style/FloatingLabel">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/contrasena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="13"
                android:inputType="textPassword"
                android:theme="@style/EditText" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_singin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_singup"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/redondeo_boton_azul"
            android:onClick="verValor"
            android:padding="10dp"
            android:text="Iniciar Sesión"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_singup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btn_singin"
            android:layout_alignLeft="@+id/btn_singin"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/btn_singin"
            android:layout_alignStart="@+id/btn_singin"
            android:layout_marginBottom="50dp"
            android:background="@drawable/redondeo_boton_verde"
            android:onClick="verValor"
            android:padding="10dp"
            android:text="Registrarse"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="15dp" />

    </RelativeLayout>

</LinearLayout>